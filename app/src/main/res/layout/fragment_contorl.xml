<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <com.gaia.button.view.MyScrollView
        android:id="@+id/sl_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_switch"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUTTONS AIR"
                    android:textColor="#ff1e1e1e"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/iv_switch"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_switch"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/icon_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_persion"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart ="27dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_personal"
                    android:layout_width="25dp"
                    android:layout_height="38dp"/>
                <ImageView
                    android:id="@+id/iv_device_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/bg_no_device"
                    android:layout_width="195dp"
                    android:layout_height="195dp"/>

                <ImageView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/iv_device_bg_white"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    android:background="@drawable/bg_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_device"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_contrl_top_center"
                    android:layout_width="115dp"
                    android:layout_height="74dp"/>

                <com.gaia.button.view.ArcSeekBarOutter
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/arc_seek_bar1"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    app:arc_border_color="#fff"
                    app:arc_border_width="0dp"
                    app:arc_colors="@array/arc_colors_custom"
                    app:arc_max="100"
                    app:arc_min="0"
                    app:arc_open_angle="90"
                    app:arc_progress="0"
                    app:arc_rotate_angle="90"
                    app:arc_shadow_radius="5dp"
                    app:arc_thumb_color="@android:color/holo_red_dark"
                    app:arc_thumb_mode="1"
                    app:arc_thumb_radius="5dp"
                    app:arc_thumb_shadow_color="@android:color/holo_red_dark"
                    app:arc_thumb_shadow_radius="0dp"
                    app:arc_thumb_width="3dp"
                    app:arc_width="5dp"
                    tools:ignore="MissingConstraints" />
                <com.gaia.button.view.ArcSeekBarInner
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/arc_seek_bar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:arc_border_color="#fff"
                    app:arc_border_width="0dp"
                    app:arc_colors="@array/arc_colors_custom"
                    app:arc_max="100"
                    app:arc_min="0"
                    app:arc_open_angle="90"
                    app:arc_progress="0"
                    app:arc_rotate_angle="90"
                    app:arc_shadow_radius="5dp"
                    app:arc_thumb_color="@android:color/holo_red_dark"
                    app:arc_thumb_mode="1"
                    app:arc_thumb_radius="4dp"
                    app:arc_thumb_shadow_color="@android:color/holo_red_dark"
                    app:arc_thumb_shadow_radius="0dp"
                    app:arc_thumb_width="3dp"
                    app:arc_width="5dp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_device"
                    android:id="@+id/iv_void_d"
                    android:padding ="5dp"
                    android:layout_marginStart="90dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_voice_de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginTop="53dp"
                    android:id="@+id/iv_void_p"
                    android:padding ="5dp"
                    android:layout_marginEnd="90dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_device"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/icon_void_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/icon_battery"
                    android:id="@+id/tv_bttary"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top|center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/iv_device"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ff949494"
                    android:textSize="14sp" />
                <TextView
                    app:layout_constraintTop_toBottomOf="@+id/arc_seek_bar1"
                    android:layout_marginBottom="23dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量"
                    android:textColor="#ff949494"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_scan"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在搜索设备..."
                    android:textColor="#ff949494"
                    android:textSize="18sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_center"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_play_model"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放模式"
                    android:textColor="#ff1e1e1e"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/ll_contorl"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_play_model"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:minHeight="120dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tv_standard"
                        android:gravity="center"
                        android:text="标准"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/bg_play_standard"
                        android:textColor="#1E1E1E"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_noise"
                        android:gravity="center"
                        android:text="降噪"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/bg_play_noise"
                        android:textColor="#1E1E1E"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_ambient"
                        android:gravity="center"
                        android:text="环境音"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/bg_play_surround"
                        android:textColor="#1E1E1E"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <View
                    android:id="@+id/view_line"
                    app:layout_constraintTop_toBottomOf="@+id/ll_contorl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:background="#E4E4E4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@+id/view_line"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/cl_contorl_bottom"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预制音效"
                        android:textColor="#ff1e1e1e"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_contorl_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="均衡"
                        android:layout_marginEnd="17dp"
                        android:textColor="#fffa4421"
                        android:textSize="12sp" />

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/iv_arrow"
                        android:layout_marginEnd="26dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/icon_personal_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bottom"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/cl_device_info"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备信息"
                        android:textColor="#ff1e1e1e"
                        android:textSize="16sp" />

                    <ImageView
                        android:padding="5dp"
                        android:layout_marginEnd="26dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/icon_personal_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:background="#E4E4E4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@+id/cl_device_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/cl_device_update"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="固件升级"
                        android:textColor="#ff1e1e1e"
                        android:textSize="16sp" />

                    <ImageView
                        android:padding="5dp"
                        android:layout_marginEnd="26dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/bg_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:background="#E4E4E4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@+id/cl_device_update"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/cl_device_reset"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备重置"
                        android:textColor="#ff1e1e1e"
                        android:textSize="16sp" />

                    <ImageView
                        android:padding="5dp"
                        android:layout_marginEnd="26dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/icon_personal_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:background="#F8F8F8"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </com.gaia.button.view.MyScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>