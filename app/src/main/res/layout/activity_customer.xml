<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_back"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="14dp"
        android:layout_height="25dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_title"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户支持"
        android:textColor="#ff1e1e1e"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_auto_paly"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_height="97dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/icon_phone_call"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="37dp"
            android:padding="5dp"
            android:background="@drawable/icon_phone_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_call_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="拨打电话"
            android:textColor="#ff1e1e1e"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/icon_phone_call"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/icon_phone_call"
            app:layout_constraintTop_toBottomOf="@+id/tv_call_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:gravity="start|center_vertical"
            android:layout_marginEnd="30dp"
            android:text="433-4006008802"
            android:textColor="#ff1e1e1e"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#E4E4E4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_auto_paly_one"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auto_paly"
        android:layout_height="97dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/icon_phone_call_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="37dp"
            android:padding="5dp"
            android:background="@drawable/icon_email_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_call_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="发送邮件"
            android:textColor="#ff1e1e1e"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/icon_phone_call_one"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/icon_phone_call_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_call_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:gravity="start|center_vertical"
            android:layout_marginEnd="30dp"
            android:text="support@buttonsus.com"
            android:textColor="#ff1e1e1e"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#E4E4E4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>