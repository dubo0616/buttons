<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@drawable/bg_aaa"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:minWidth="155dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="186dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_has"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_img"
        android:background="@drawable/icon_air"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_name"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff1e1e1e"
        android:textSize="16sp" />

    <TextView
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/bg_cricle"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_connect"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已连接"
        android:gravity="center"
        android:textColor="#ff949494"
        android:textSize="10sp" />
    </LinearLayout>
    <ImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_no"
        android:background="@android:color/white"
        android:src="@drawable/icon_bbb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>