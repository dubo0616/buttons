<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_detail_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/tv_detail_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_img"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="BUTTONS会员嘉年华，最高可享5倍积分。"
        android:textColor="#ff1e1e1e"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_detail_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_content"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:textStyle="bold"
        android:textColor="#ff1e1e1e"
        android:textSize="16sp" />
    <View
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_link"
        android:background="#ff1e1e1e"
        android:layout_width="64dp"
        android:layout_height="5dp"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_forward"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_collect"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_zhuanfa"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_collect"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="22dp"
        android:src="@drawable/icon_souchang"
        android:layout_marginEnd="15dp"
        android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>