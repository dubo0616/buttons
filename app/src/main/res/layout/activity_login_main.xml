<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/layout_left"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/layout_right"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintBottom_toTopOf="@+id/iv_left_top_two"
            android:background="#00ff00"
            app:layout_constraintVertical_weight="1"
            android:id="@+id/iv_left_top_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/iv_left_top_one"
            android:background="#00ffd0"
            app:layout_constraintBottom_toTopOf="@+id/iv_left_top_three"
            android:id="@+id/iv_left_top_two"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/iv_left_top_two"
            android:background="#eeff22"
            android:id="@+id/iv_left_top_three"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/layout_right"
        app:layout_constraintStart_toEndOf="@+id/layout_left"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:background="#00fff0"
            android:id="@+id/iv_right_top_one"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_right_top_two"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


        <ImageView
            app:layout_constraintVertical_weight="2"
            app:layout_constraintTop_toBottomOf="@+id/iv_right_top_one"
            android:background="#044f30"
            app:layout_constraintBottom_toTopOf="@+id/iv_right_top_three"
            android:id="@+id/iv_right_top_two"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/iv_right_top_two"
            app:layout_constraintVertical_weight="2"
            android:background="#eeff22"
            android:id="@+id/iv_right_top_three"
            app:layout_constraintBottom_toTopOf="@+id/iv_right_top_four"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_right_top_three"
            app:layout_constraintVertical_weight="1"
            android:background="#eedd22"
            android:id="@+id/iv_right_top_four"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="#aa1e1e1e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/icon_login_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.gaia.button.view.LoginBtn
        android:id="@+id/btn_login_wechat"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_phone"
        android:layout_width="280dp"
        android:background="@drawable/login_btn_bg"
        android:layout_height="44dp"/>
    <com.gaia.button.view.LoginBtn
        android:id="@+id/btn_login_phone"
        android:layout_marginBottom="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="280dp"
        android:background="@drawable/login_btn_phone_bg"
        android:layout_height="44dp"/>

    <View
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="135dp"
        android:background="@drawable/login_bottom_line"
        android:layout_height="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>