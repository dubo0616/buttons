<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvOnlineVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_no_available_file"
        android:text="@string/message_no_upgrade_file_available"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tvNowVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_no_available_file"
        android:text="@string/message_no_upgrade_file_available"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnStartDownUpgrade"
        style="@style/AppTheme.Button.Flat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="@string/button_start_upgrade"/>
</RelativeLayout>