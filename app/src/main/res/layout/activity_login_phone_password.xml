<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_back"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="14dp"
        android:layout_height="25dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机验证码登录"
        android:textColor="#ff949494"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机密码登录"
        android:textColor="#ff1e1e1e"
        android:textSize="28sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_phone_code"
            android:layout_marginStart="5dp"
            android:layout_width="37dp"
            android:layout_height="28dp"
            android:text="+86"
            android:textColor="#ff949494"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/iv_down"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/tv_phone_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_down"
            android:layout_width="11dp"
            android:layout_height="11dp"/>

        <EditText
            android:background="@null"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_down"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:maxLength="11"
            android:gravity="start|center_vertical"
            android:inputType="number|numberDecimal"
            android:id="@+id/et_phone"
            android:hint="请输入手机号码"
            android:textColorHint="#949494"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginTop="6dp"
            android:background="#E4E4E4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layout_bottom"
        app:layout_constraintTop_toBottomOf="@+id/layout_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_height="50dp">
        <EditText
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/et_phone_code"
            android:maxLength="18"
            android:inputType="textPassword"
            android:gravity="start|center_vertical"
            android:hint="请输入密码"
            android:textColorHint="#949494"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginTop="6dp"
            android:background="#E4E4E4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CheckBox
        android:layout_marginStart="70dp"
        android:id="@+id/cb_box"
        android:layout_marginTop="15dp"
        android:background="@drawable/phone_login_check_bg"
        android:button="@null"
        app:layout_constraintEnd_toStartOf="@+id/tv_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_bottom"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/tv_server"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cb_box"
        app:layout_constraintTop_toBottomOf="@+id/layout_bottom"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="@string/login_server"
        android:textColor="#ff949494"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_login"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@drawable/phone_login_btn_text_color"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/phone_login_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <TextView
        android:id="@+id/tv_forget"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textColor="#ff1e1e1e"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>