<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_back"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="14dp"
        android:layout_height="25dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改签名"
        android:textColor="#ff1e1e1e"
        android:textSize="24sp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="50dp"
        android:id="@+id/layout_new_bottom"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="50dp">
        <EditText
            app:layout_constraintStart_toStartOf="parent"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:id="@+id/et_text"
            android:maxLength="50"
            android:gravity="start|center_vertical"
            android:hint="请输入你的签名"
            android:textColorHint="#949494"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginTop="6dp"
            android:background="#E4E4E4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_sumit"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="@drawable/phone_login_btn_text_color"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:enabled="false"
        android:background="@drawable/phone_login_bg"
        app:layout_constraintTop_toBottomOf="@+id/layout_new_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>